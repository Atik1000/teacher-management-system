upstream uwsgi {
        server unix:/opt/django_boilerplate/uwsgi/uwsgi.sock;
}

server {
        listen 80;
        server_name _;

        access_log /opt/django_boilerplate/logs/access.log;
        error_log /opt/django_boilerplate/logs/error.log;

        charset utf-8;
        client_max_body_size 16M;

        location /static {
                alias /opt/django_boilerplate/static;
        }

        location /media {
                alias /opt/django_boilerplate/media;
        }

        location / {
                uwsgi_pass uwsgi;
                include uwsgi_params;
                uwsgi_read_timeout 300s;
                uwsgi_send_timeout 300s;
        }
}
